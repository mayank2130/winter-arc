generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  targetUrl String
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  analytics Analytics[]
  
  @@map("links")
}

model Analytics {
  id        String   @id @default(cuid())
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  
  userAgent String?
  referer   String?
  ip        String?
  country   String?
  
  createdAt DateTime @default(now())
  
  @@map("analytics")
}